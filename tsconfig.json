{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    // "noUnusedLocals": true,
    // "noImplicitReturns": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@caglarturali/*": ["packages/*/src"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Source Map Options */

    /* Experimental Options */

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages"],
  "exclude": ["packages/*/cjs", "packages/*/esm", "packages/*/dist"]
}
