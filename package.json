{
  "name": "@piyango/server",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "majs": "majestic",
    "lint": "tslint -c tslint.json \"api/**/*.ts\" \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prod": "now --prod",
    "rmtmp": "rm -rf /tmp/zeit-fun-*",
    "sync:draws": "ts-node scripts/syncDraws.ts",
    "sync:stats": "ts-node scripts/calcStats.ts",
    "sync:commit": "ts-node scripts/syncAndCommit.ts",
    "docs": "ts-node scripts/generateDocs.ts && prettier --write index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm test",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "majestic": {
    "args": [],
    "env": {}
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@now/node": "^1.4.1",
    "@piyango/common": "workspace:^1.0.1",
    "haikunator": "^2.1.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "node-fetch": "^2.6.0",
    "strip-bom": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/markdown-it": "^0.0.9",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^13.9.0",
    "@types/node-fetch": "^2.5.5",
    "chalk": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "majestic": "^1.6.2",
    "markdown-it": "^10.0.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0",
    "typescript": "^3.8.3"
  }
}
