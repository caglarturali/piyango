{
  "name": "piyango",
  "private": true,
  "repository": "git://github.com:caglarturali/piyango.git",
  "scripts": {
    "clean": "pnpm recursive exec -- rm -rf node_modules && pnpm recursive install",
    "start:app": "pnpm recursive run dev --filter @caglarturali/piyango-app",
    "test": "jest",
    "majs": "majestic",
    "lint": "tslint -c tslint.json \"packages/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "sync": "pnpm recursive run sync:commit --filter @caglarturali/piyango-server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint:fix",
      "pre-push": "pnpm test",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@types/color": "^3.0.1",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^13.9.8",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.31",
    "chalk": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "majestic": "^1.6.2",
    "pnpm": "^4.12.4",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  }
}
