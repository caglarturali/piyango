{
  "name": "piyango",
  "private": true,
  "scripts": {
    "test": "jest",
    "majs": "majestic",
    "lint": "tslint -c tslint.json \"packages/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "pkg": "git add packages/ && git commit -m \"Update:Packages --> $(date)\"",
    "pkgp": "pnpm run pkg && git push"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint:fix",
      "pre-push": "pnpm test",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/markdown-it": "^0.0.9",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^13.9.5",
    "@types/node-fetch": "^2.5.5",
    "@types/react": "^16.9.26",
    "chalk": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lerna": "^3.20.2",
    "majestic": "^1.6.2",
    "markdown-it": "^10.0.0",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  }
}
