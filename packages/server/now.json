{
  "version": 2,
  "build": {
    "env": {
      "NPM_RC": "@my-npmrc"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Access-Control-Allow-Origin": "*"
      },
      "continue": true
    },
    {
      "src": "/api/(.*)",
      "headers": { "Cache-Control": "max-age=0, s-maxage=3600" },
      "continue": true
    }
  ]
}
